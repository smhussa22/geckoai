generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_MIGRATION_DATABASE_URL")
}

model User {
  id        String   @id // no uuid/cuid; give google sub to this
  email     String   @unique
  name      String?
  firstName String?
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token GoogleToken?
}

model GoogleToken {
  userId       String   @id
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken  String
  refreshToken String?
  scope        String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  updatedAt    DateTime @updatedAt
}
